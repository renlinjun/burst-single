<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="burst.modular.system.mapper.PermissionMenuMapper">
    <!-- 开启二级缓存 -->
    <!--<cache type="org.mybatis.caches.ehcache.LoggingEhcache"/> -->

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="burst.modular.system.entity.PermissionMenu">
        <id column="MENU_iD" property="menuId" />
        <result column="PERMISSION_ID" property="permissionId" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        MENU_iD AS menuId, PERMISSION_ID
    </sql>
    
    <!-- 批量插入权限对应的资源 -->
    <insert id="assignMenu" parameterType="List">
    	insert into PERMISSION_MENU(PERMISSION_ID,MENU_ID)
    	values 
    	<foreach collection="list" item="pm" separator="," index="index">
    		(#{permissionId},#{menuId})
    	</foreach>
    </insert>
    
    <select id="queryMenuByPermission" parameterType="java.util.List" resultType="Menu">
		SELECT
			c.ID AS id,
			c.APP_ID AS appid,
			c.MENU_CODE AS menuCode,
			c.MENU_NAME AS menuName,
			c.MENU_URL AS menuUrl,
			c.P_ID AS pId
		FROM
			`permission_menu` a
		LEFT JOIN permission b ON a.PERMISSION_ID = b.ID
		LEFT JOIN menu c ON a.MENU_iD = c.id
		WHERE
			b.PERMISSION_TYPE_ID = 'MENU'
		AND a.PERMISSION_ID IN 
		<foreach collection="list" index="index" open="(" close=")" item="p" separator=",">
			#{p.id}
		</foreach>
    
    </select>

</mapper>
