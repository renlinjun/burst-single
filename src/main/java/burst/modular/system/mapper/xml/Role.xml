<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="burst.modular.system.mapper.RoleMapper">

    <!-- 开启二级缓存 -->
    <cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="burst.modular.system.entity.Role">
        <id column="ID" property="id" />
        <result column="ROLE_CODE" property="roleCode" />
        <result column="ROLE_NAME" property="roleName" />
        <result column="ROLE_TYPE_ID" property="roleTypeId" />
        <result column="ROLE_DESC" property="roleDesc" />
        <result column="APP_ID" property="appId" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        ID, ROLE_CODE, ROLE_NAME, ROLE_TYPE_ID, ROLE_DESC, APP_ID
    </sql>

</mapper>
