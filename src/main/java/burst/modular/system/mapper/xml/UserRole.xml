<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="burst.modular.system.mapper.UserRoleMapper">
    <!-- 开启二级缓存 -->
    <!--<cache type="org.mybatis.caches.ehcache.LoggingEhcache"/> -->

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="burst.modular.system.entity.UserRole">
        <id column="USER_ID" property="userId" />
        <result column="ROLE_ID" property="roleId" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        USER_ID, ROLE_ID
    </sql>
    
    <insert id="addBatch" parameterType="list">
    	insert into USER_ROLE(ROLE_ID,USER_ID) VALUES 
    	<foreach collection="list"  item="it" separator="," index="index">
    		(#{it.roleId},#{it.userId})
    	</foreach>
    </insert>
    
   <select id="queryRoleByUserId" parameterType="java.lang.String" resultType="role">
   		SELECT
			A.ID AS id,
			A.ROLE_CODE AS roleCode,
			A.ROLE_NAME AS roleName,
			A.ROLE_DESC AS roleDesc,
			A.ROLE_TYPE_ID AS roleTypeId
		FROM
			ROLE A
		LEFT JOIN USER_ROLE B ON B.ROLE_ID = A.ID
		LEFT JOIN ROLE_TYPE C ON A.ROLE_TYPE_ID = C.ID
		WHERE
			B.USER_ID = #{userId}
   </select>

</mapper>
